<UserControl x:Class="C64_Sprite_Editor.ViewComponents.TileRowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:components="clr-namespace:C64_Sprite_Editor.ViewComponents"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <components:TileGroupControl Grid.Column="0" x:Name="group0"/>
        <components:TileGroupControl Grid.Column="1" x:Name="group1"/>
        <components:TileGroupControl Grid.Column="2" x:Name="group2"/>
    </Grid>
</UserControl>
